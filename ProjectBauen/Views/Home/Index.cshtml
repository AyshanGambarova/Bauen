@model HomeViewModel
<header id="home" class="header slider-fade" data-scroll-index="0">
    <div class="owl-carousel owl-theme">
        @foreach (Banner item in Model.Banners)
        {

            <div class="text-left item bg-img" data-overlay-dark="3" data-background="img/slider/@item.Image">
                <div class="v-middle caption mt-30">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="o-hidden">
                                    <h1>@item.Title</h1>
                                    <p>
                                        @item.Text
                                    </p>
                                    <div class="butn-light mt-30 mb-30">
                                        <a href="@item.ButtonLink" target="_blank"><span>@item.ButtonText</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</header>
<!-- Content -->
<div class="content-wrapper">
    <!-- Lines -->
    <section class="content-lines-wrapper">
        <div class="content-lines-inner">
            <div class="content-lines"></div>
        </div>
    </section>
    <!-- About -->

    <section id="about" class="about section-padding" data-scroll-index="1">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-30 animate-box" data-animate-effect="fadeInUp">
                    <h2 class="section-title">@Html.Raw(@Model.About.Title)</h2>
                    @Html.Raw(Model.About.Text)
                </div>
                <div class="col-md-6 animate-box" data-animate-effect="fadeInUp">
                    <div class="about-img">
                        <div class="img"> <img src="~/img/@Model.About.Image" class="img-fluid" alt=""> </div>
                        <div class="about-img-2 about-buro">@Model.About.Subtitle</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Projects -->
    <section id="projects" class="projects section-padding" data-scroll-index="2">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title">Our <span>Projects</span></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="owl-carousel owl-theme">
                        @foreach (Project item in Model.Projects)
                        {
                            <div class="item">
                                <div class="position-re o-hidden"> <img src="~/img/projects/@item.Image" alt=""> </div>
                                <div class="con">
                                    <h6><a href="cotton-house.html">@item.Subtitle</a></h6>
                                    <h5><a href="cotton-house.html">@item.ProjectName</a></h5>
                                    <div class="line"></div> <a href="/project/details/@item.Id" ><i class="ti-arrow-right"></i></a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Services -->
    <section id="services" class="services section-padding" data-scroll-index="3">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title">Our <span>Services</span></h2>
                </div>
            </div>
            <div class="row">
                @foreach (Service item in Model.Services)
                {
                    <div class="col-md-4">
                        <div class="item">
                            <a href="/service/details/@item.Id">
                                <img src="~/img/icons/@item.Icon" alt="">
                                <h5>@item.Subtitle</h5>
                                <div class="line"></div>
                                <p>@item.Title</p>
                                <div class="numb">@item.Number</div>
                            </a>
                        </div>
                    </div>

                }
                
            </div>
        </div>
    </section>
    <!-- Blog -->
    <section id="blog" class="bauen-blog section-padding" data-scroll-index="4">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title">Current <span>News</span></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="owl-carousel owl-theme">
                        @foreach (News item in Model.News)
                        {
                            <div class="item">
                                <div class="position-re o-hidden"> <img src="~/img/slider/@item.Image" alt=""> </div>
                                <div class="con">
                                    <span class="category">
                                        <a href="blog.html">@item.Subtitle</a> -  @item.Date
                                    </span>
                                    <h5><a href="post.html">@item.Title</a></h5>
                                </div>
                            </div>

                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact -->
    <section id="contact" class="section-padding" data-scroll-index="5">
        <div class="container">
            <div class="row">
                <div class="col-md-12 animate-box" data-animate-effect="fadeInUp">
                    <h2 class="section-title">Contact <span>Us</span></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-30 animate-box" data-animate-effect="fadeInUp">
                    <p>@Model.Contact.Text</p>
                    <p><b>VAT :</b>@Model.Contact.Vat</p>
                </div>
                <div class="col-md-4 mb-30 animate-box" data-animate-effect="fadeInUp">
                    <p><b>Phone :</b> @Model.Contact.Phone</p>
                    <p><b>Email :</b> @Model.Contact.Email</p>
                    <p><b>Address :</b> @Model.Contact.Address</p>
                </div>
                <div class="col-md-4 animate-box" data-animate-effect="fadeInUp">
                    <form method="post" class="row" action="/Home/AddMessage">
                        <div class="col-md-12">
                            <input type="text" name="fullname" id="fullname" placeholder="Full Name" required="">
                        </div>
                        <div class="col-md-12">
                            <input type="email" name="email" id="email" placeholder="Your Email" required="">
                        </div>
                        <div class="col-md-12">
                            <textarea name="text" id="text" cols="40" rows="3" placeholder="Your Message" required=""></textarea>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="butn-dark mt-15"><a href="#0"><span>Send</span></a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Promo video - Testiominals -->
    <section class="testimonials">
        <div class="background bg-img bg-fixed section-padding pb-0"  data-overlay-dark="3" style="background-image:url(img/banner2.jpg)">
            <div class="container">
                <div class="row">
                    <!-- Promo video -->
                    <div class="col-md-6">
                        <div class="vid-area">
                            <div class="vid-icon">
                                <a class="play-button vid" href="https://youtu.be/RziCmLzpFNY">
                                    <svg class="circle-fill">
                                        <circle cx="43" cy="43" r="39" stroke="#fff" stroke-width=".5"></circle>
                                    </svg>
                                    <svg class="circle-track">
                                        <circle cx="43" cy="43" r="39" stroke="none" stroke-width="1" fill="none"></circle>
                                    </svg> <span class="polygon">
                                        <i class="ti-control-play"></i>
                                    </span>
                                </a>
                            </div>
                            <div class="cont mt-15 mb-30">
                                <h5>View promo video</h5>
                            </div>
                        </div>
                    </div>
                    <!-- Testiominals -->
                    <div class="col-md-5 offset-md-1">
                        <div class="testimonials-box animate-box" data-animate-effect="fadeInUp">
                            <div class="head-box">
                                <h4>What Client's Say?</h4>
                            </div>
                            <div class="owl-carousel owl-theme">
                                @foreach (Testimonials item in Model.Testimonials)
                                {
                                    <div class="item">
                                        <span class="quote"><img src="~/img/quot.png" alt=""></span>
                                        <p>@item.Text</p>
                                        <div class="info">
                                            <div class="author-img"> <img src="~/img/team/@item.Image" alt=""> </div>
                                            <div class="cont">
                                                <h6>@item.FullName</h6> <span>@item.Occupation</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Clients -->
    <section class="clients">
        <div class="container">
            <div class="row">
                <div class="col-md-7 owl-carousel owl-theme">
                    @foreach (Clients item in Model.Clients)
                    {
                        <div class="clients-logo">
                            <a href="#0"><img src="~/img/clients/@item.Logo" alt=""></a>
                        </div>
                    }
                   
                </div>
            </div>
        </div>
    </section>
