@model About
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Blogs</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Settings</th>

                    </tr>
                </thead>

                <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td><img src="~/img/@Model.Image" style="width:50px"></td>
                            <td>@Html.Raw(@Model.Title)</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@Model.Id"><i class="fas fa-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-fw fa-wrench" style="color:green"></i></a>
                                @*<a asp-action="Delete" asp-route-id="@Model.Id"><i class="fas fa-trash" style="color:red"></i></a>*@
                            </td>
                        </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>