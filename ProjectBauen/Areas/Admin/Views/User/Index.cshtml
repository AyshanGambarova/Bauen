@model List<UserDTO>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Users</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>FullName</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Settings</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (UserDTO item in Model)
                    {
                    <tr>

                        <td>@item.FullName</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.Role</td>
                        @if (item.IsActive)
                        {
                            <td>Active</td>

                        }
                        else
                        {
                            <td>Disabled</td>
                        }
                    <td>
                        @if (item.IsActive)
                        {
                            <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-danger mr-1">
                                Disable
                            </a>

                        }
                        else
                        {
                            <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-success mr-1">
                                Activate
                            </a>
                        }
                    </td>
                        @*<td>
            <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a>
            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-fw fa-wrench" style="color:green"></i></a>
            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash" style="color:red"></i></a>
        </td>*@

                    </tr>
                    }







                </tbody>
            </table>
        </div>
    </div>
</div>